<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.babybus.stu.eval.yudingyi.mapper.RoleMapper">

    <!-- 插入角色 -->
    <insert id="insertRole" parameterType="String">
        INSERT INTO roles (name) VALUES (#{name})
    </insert>

    <!-- 获取角色列表 -->
    <select id="getRoleList" resultType="String">
        SELECT name FROM roles
    </select>

    <!-- 根据角色ID获取角色名称 -->
    <select id="getRoleById" parameterType="Integer" resultType="String">
        SELECT name FROM roles WHERE id = #{id}
    </select>

    <!-- 根据角色名称获取角色ID -->
    <select id="getIdByRole" parameterType="String" resultType="Integer">
        SELECT id FROM roles WHERE name = #{name}
    </select>

</mapper>